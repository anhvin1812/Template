@using System.Web.Optimization
@using PagedList.Mvc
@model PagedList.StaticPagedList<App.Services.Dtos.NewsManagement.TagSummary>
@{
    ViewBag.Title = "Tags";
}

@section AddStyles{
    @Styles.Render("~/Admin/Css/DataTable")
    <!-- Bootstrap-toggle -->
    @Styles.Render("~/Areas/Admin/Scripts/bootstrap-toggle/bootstrap-toggle.min.css")
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Tags Management
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>News Management</li>
            <li class="active">Tags</li>
        </ol>
    </section>
}

<div class="box box-primary">
    <div class="box-header with-border">
        @using (Html.BeginForm("Index", "Tag", FormMethod.Get, new { @class = "form-inline" }))
        {

            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <h3 class="box-title">
                            <a class="btn btn-block btn-primary btn-sm" href="@Url.Action("Create", "Tag")">New tag</a>
                            <br />
                        </h3>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-9  text-right">
                    <div class="form-group">
                        <div class="input-group input-group-sm">
                            <input class="form-control" type="text" name="keyword" placeholder="Tag name" value="@ViewBag.Keyword">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default btn-flat"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div><!-- /.box-header -->
    <div class="box-body">
        @if (Model.Any())
        {
            var toggleAttributes = new {@class = "toggle-disable", disabled = "disabled", data_toggle = "toggle", data_onstyle = "success", data_on = "Yes", data_off = "No", data_size = "small" };

            <table class="table table-hover table-striped">
                <tr>
                    <th>Name</th>
                    <th>Disabled</th>
                    <th></th>
                </tr>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Name</td>
                        <td>
                            @Html.CheckBox("Disable", m.IsDisabled, toggleAttributes)
                        </td>
                        <td>
                            <a class="btn btn-default btn-sm" href="@Url.Action("Edit", "Tag", new {id = m.Id})">
                                <i class="fa fa-fw fa-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }

            </table>
        }

    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { keyword = ViewBag.Keyword, page = page }), new PagedListRenderOptions { ContainerDivClasses = new[] { "no-margin", "pull-right" } })

        @*<ul class="pagination no-margin pull-right">
                <li><a href="#">&laquo;</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>*@
    </div>
</div>
<!-- /.box -->


@section AddScripts{
    <!-- DataTables -->
    @Scripts.Render("~/Admin/Js/dataTable")
    <!-- Bootstrap-toggle -->
    @Scripts.Render("~/Areas/Admin/Scripts/bootstrap-toggle/bootstrap-toggle.min.js")
}

