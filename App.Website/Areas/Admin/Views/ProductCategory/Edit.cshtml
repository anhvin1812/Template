@using System.Web.Optimization
@using App.Core.Permission
@model App.Services.Dtos.ProductManagement.ProductCategoryEntry
@{
    ViewBag.Title = "Product Categories";
}

@section AddStyles{
   
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Product Categories Management
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Products</li>
            <li class="active">Categories</li>
        </ol>
    </section>
}

<div class="box box-primary">
    <div class="box-header with-border"></div><!-- /.box-header -->
    @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="box-body">
            @Html.ValidationSummary(false, null, new {@class = "alert alert-danger alert-dismissible", id = "create-role-messages"})
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Enter category name"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new {@class = "form-control", placeholder = "Enter description"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ParentId, "Parent")
                @Html.DropDownListFor(m => m.ParentId, ViewBag.Parents as SelectList, string.Empty, new { @class = "form-control" })
                @*@Html.DropDownList("ParentId", string.Empty)*@
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-default" href="@Url.Action("Index", "ProductCategory")">Back to categories</a>
        </div>
    }

</div><!-- /.box -->


@section AddScripts{
    <!-- jQuery-validate -->
    @Scripts.Render("~/Admin/Js/jqueryval")
    <!-- iCheck -->
    @Scripts.Render("~/Admin/Js/iCheck")
}

