@using System.Web.Optimization
@using App.Core.Permission
@model App.Services.Dtos.IdentityManagement.ChangePasswordEntry
@{
    ViewBag.Title = "Change Password";
}

@section AddStyles{
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Change password
        </h1>
    </section>
}
<div class="row">
    <div class="col-sm-6">
        <div class="box box-primary">
            <div class="box-header with-border">
            </div><!-- /.box-header -->
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                var toggleAttributes = new { data_toggle = "toggle", data_onstyle = "success", data_on = "Yes", data_off = "No" };

                <div class="box-body">
                    @Html.ValidationSummary(false, null, new { @class = "alert alert-danger alert-dismissible", id = "validation-messages" })
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Success!</h4>
                            @TempData["Message"]
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(m => m.CurrentPassword, "Current", new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.CurrentPassword, new {@class = "form-control", placeholder = "Enter current password"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, "New", new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", placeholder = "Enter new password"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, "Re-type new", new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confrim password" })
                        </div>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-push-3">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            }

        </div><!-- /.box -->
    </div>
</div>


@section AddScripts{
    <!-- jQuery-validate -->
    @Scripts.Render("~/Admin/Js/jqueryval")
}

