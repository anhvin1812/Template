@using System.Web.Optimization
@using App.Core.Permission
@model App.Services.Dtos.NewsManagement.TagEntry
@{
    ViewBag.Title = "Edit Tag";
}

@section AddStyles{
    <!-- Bootstrap-toggle -->
    @Styles.Render("~/Areas/Admin/Scripts/bootstrap-toggle/bootstrap-toggle.min.css")
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Tags Management
            <small>add new tag</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>News</li>
            <li class="active">Tags</li>
        </ol>
    </section>
}

<div class="row">
    <div class="col-sm-6">
        <div class="box box-primary">
            <div class="box-header with-border">
            </div><!-- /.box-header -->
            @using (Html.BeginForm("Edit", "Tag", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                var toggleAttributes = new { data_toggle = "toggle", data_onstyle = "success", data_on = "Yes", data_off = "No" };

                <div class="box-body">
                    @Html.ValidationSummary(false, null, new { @class = "alert alert-danger alert-dismissible", id = "validation-messages" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter tag name" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Disable", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(m => m.IsDisabled, toggleAttributes)
                        </div>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-push-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-default pull-right" onclick="goBack()">Back to tags</a>
                        </div>
                    </div>
                </div>
            }

        </div><!-- /.box -->
    </div>
</div>


@section AddScripts{
    <!-- jQuery-validate -->
    @Scripts.Render("~/Admin/Js/jqueryval")
    <!-- Bootstrap-toggle -->
    @Scripts.Render("~/Areas/Admin/Scripts/bootstrap-toggle/bootstrap-toggle.min.js")
}

