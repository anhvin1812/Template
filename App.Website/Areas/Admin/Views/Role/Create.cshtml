@using System.Web.Optimization
@{
    ViewBag.Title = "Roles";
}

@section AddStyles{
    <!-- iCheck for checkboxes and radio inputs -->
    @Styles.Render("~/Areas/Admin/Scripts/iCheck/line/blue.css")
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Roles Management
            <small>add new role</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Users</li>
            <li class="active">Roles</li>
        </ol>
    </section>
}
<div class="box box-primary">
    <div class="box-header with-border">
    </div><!-- /.box-header -->

    <form role="form">
        <div class="box-body">
            <div class="form-group">
                <label for="txtRoleName">Role name</label>
                <input class="form-control" id="txtRoleName" placeholder="Enter role name" type="text">
            </div>
            <div class="form-group">
                <label>Permissions</label>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td></td>
                            <td>Create</td>
                            <td>Read</td>
                            <td>Modify</td>
                            <td>Delete</td>
                            <td>Super</td>
                        </tr>
                        <tr>
                            <td>User management</td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                        </tr>
                        <tr>
                            <td>Roles management</td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                            <td>
                                <input type="checkbox" class="flat-red">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-default" href="@Url.Action("Index", "Role")">Back to roles</a>
        </div>
    </form><!-- /form-->
</div><!-- /.box -->


@section AddScripts{
    <!-- iCheck -->
    @Scripts.Render("~/Areas/Admin/Scripts/iCheck/icheck.min.js")

    <script>
        $(function () {
            //Flat red color scheme for iCheck
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });
        });
    </script>
}

