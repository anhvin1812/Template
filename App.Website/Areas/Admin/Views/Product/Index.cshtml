@using System.Web.Optimization
@using App.Core.Configuration
@model IEnumerable<App.Services.Dtos.ProductManagement.ProductSummary>
@{
    ViewBag.Title = "Products";
}

@section AddStyles{
    @Styles.Render("~/Admin/Css/DataTable")
}

@section ContentHeader
{
<section class="content-header">
    <h1>
        Products Management
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Products Management</li>
        <li class="active">Products</li>
    </ol>
</section>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">
            <a class="btn btn-block btn-primary" href="@Url.Action("Create", "Product")">Add new product</a>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @if (Model.Any())
        {
            <table class="table table-hover table-striped">
                <tr>
                    <th>#</th>
                    <th></th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                @{ int i = 1; }
                @foreach (var m in Model)
                {
                    <tr>
                        <td class="vertical-middle">@i</td>
                        <td class="vertical-middle">
                            <img width="80" src="@Url.Content($"{Settings.ConfigurationProvider.DirectoryProductThumbnail}/{m.Thumbnail}")" />
                        </td>
                        <td class="vertical-middle">@m.Name</td>
                        <td class="vertical-middle">
                            @m.Price
                            @(Html.Raw( m.OldPrice > 0 ? $"</br>{m.OldPrice}" : string.Empty) )
                        </td>
                        <td class="vertical-middle">@m.Category</td>
                        <td class="vertical-middle">@m.Status</td>
                        <td class="vertical-middle">
                            <a class="btn btn-default btn-sm" href="@Url.Action("Edit", "Product", new {id = m.Id})">
                                <i class="fa fa-fw fa-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                    i++;
                }

            </table>
        }
        
    </div>
    <!-- /.box-body -->
    @*<div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            <li><a href="#">&laquo;</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
    </div>*@
</div>
<!-- /.box -->


