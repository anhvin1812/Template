@using System.Web.Optimization
@{
    ViewBag.Title = "Home page";
}

@section AddStyles{
    
}

@section ContentHeader
{
    <section class="content-header">
        <h1>
            Home page
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Settings</li>
            <li class="active">Homepage</li>
        </ol>
    </section>
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="box box-default box-solid">
                            <div class="box-header with-border">
                                <h3 class="box-title">Categories</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <ul id="sortable1" class="connectedSortable">
                                    <li class="ui-state-default dd-handle dd-handle">Item 1</li>
                                    <li class="ui-state-default dd-handle">Item 2</li>
                                    <li class="ui-state-default dd-handle">Item 3</li>
                                    <li class="ui-state-default dd-handle">Item 4</li>
                                    <li class="ui-state-default dd-handle">Item 5</li>
                                </ul>
                            </div>
                            <!-- /.box-body -->
                        </div>

                    </div>
                    <div class="col-xs-6">
                        <div class="box box-default box-solid">
                            <div class="box-header with-border">
                                <h3 class="box-title">Display on home page</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <ul id="sortable2" class="connectedSortable">
                                    <li class="ui-state-highlight dd-handle">Item 1</li>
                                    <li class="ui-state-highlight dd-handle">Item 2</li>
                                    <li class="ui-state-highlight dd-handle">Item 3</li>
                                    <li class="ui-state-highlight dd-handle">Item 4</li>
                                    <li class="ui-state-highlight dd-handle">Item 5</li>
                                </ul>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button id="btn-save-menu" type="button" class="btn btn-primary">Save</button>
                </div>
            </div><!-- /.box -->
        </div>
    </div>
</div>




@section AddScripts{

    <!-- Nestable -->
    @Scripts.Render("~/Areas/Admin/Scripts/nestable/jquery.nestable.js")
    @Scripts.Render("~/Areas/Admin/Scripts/app/menu.js")

    <script type="text/javascript">
        $(function () {
            $("#sortable1, #sortable2").sortable({
                connectWith: ".connectedSortable",
                placeholder: "dd-placeholder"
            }).disableSelection();
        });
    </script>
}