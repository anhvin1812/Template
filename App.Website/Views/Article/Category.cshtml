@using App.Core.Extensions
@using App.Infrastructure.File
@using App.Services.Dtos.NewsManagement
@using PagedList.Mvc

@model PagedList.StaticPagedList<App.Services.Dtos.NewsManagement.PublicNewsSummary>

@{
    var filters = (NewsFilter)ViewBag.Filters;
}


@section FullContent{

<div class="row">
    <div class="col-xs-12 cat-title-holder mt60">
        <h2>Fashion</h2>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li>Fashion</li>
        </ul>
    </div>
</div>
}

<div class="post-widget bg-white light-shadow mb30">
    <ul class="list-posts reset">
        @foreach (var m in Model)
        {
            var url = Url.Action("Detail", "Article", new { id = m.Id });

            <li class="post-item">
                <div class="row">
                    <div class="col-md-4">
                        <div class="img-holder-wrap">
                            <a class="img-holder" href="@url">
                                <img src="@Url.Content(GalleryHelper.GetThumbnailPath(m.Thumbnail))" alt="@m.Title">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="post-summary">
                            <h5 class="post-title">
                                <a href="@url">@m.Title</a>
                            </h5>
                            <ul class="post-meta m0 p0">
                                <li><i class="fa fa-clock-o"></i> @m.PublishedDate.RelativeTime()</li>
                                <li><i class="fa fa-eye"></i> @m.Views</li>
                            </ul>
                            <p class="p0">
                                @m.Description
                            </p>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div><!-- /.post-widget-->

@Html.PagedListPager(Model, page => Url.Action("Category", "Article", new { id = filters.CategoryId, page = page }), new PagedListRenderOptions { ContainerDivClasses = new[] { "mb30" } })

