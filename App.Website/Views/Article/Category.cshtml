@using App.Services.Dtos.Layout
@using App.Services.Dtos.NewsManagement
@using PagedList.Mvc

@model ArticleCategory

@{
    var currentCategory = Model.Categories.LastOrDefault();
    ViewBag.Title = currentCategory?.Name;
}


@section FullContent{
    @Html.Action("BreadCrumb", "Article", new { categoryId = currentCategory?.Id })
}

<!-- List posts -->
@Html.Partial("_ListHorizontal", Model.PagedNews)

@Html.PagedListPager(Model.PagedNews, page => Url.Action("Category", "Article", new { id = currentCategory?.Id, page = page }), new PagedListRenderOptions { ContainerDivClasses = new[] { "mb30" } })

@section SideBar{
    @Html.Partial("_SideBar", new SideBar {CategoryId = currentCategory?.Id})
}