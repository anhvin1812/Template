@using System.Diagnostics
@using App.Services.Dtos.Layout
@using App.Services.Dtos.NewsManagement
@using PagedList.Mvc

@model ArticleSearch

@{
    var title = Model.NewsFilter?.Keyword ?? (Model.NewsFilter?.StartDate != null ? Model.NewsFilter.StartDate.Value.ToString("dd/MM/yyyy") : string.Empty);
    ViewBag.Title = title;
}

@section FullContent{
    @Html.Partial("_Breadcrumb", new Breadcrumb { Title = title })
}

<!-- List posts -->
@Html.Partial("_ListHorizontal", Model.PagedNews)

@Html.PagedListPager(Model.PagedNews, page => Url.Action("Index", "Article", new { keyword = Model.NewsFilter?.Keyword, startDate = Model.NewsFilter?.StartDate, endDate = Model.NewsFilter?.EndDate, page = page }), new PagedListRenderOptions { ContainerDivClasses = new[] { "mb30" } })


@section SideBar{
    @Html.Partial("_SideBar", new SideBar())
}