@{
    ViewBag.Title = "Minh Khang Store";
}

@section AddStyles{
    <link href="@Url.Content("~/Scripts/jquery.bxslider/jquery.bxslider.css")" rel="stylesheet" type="text/css" />
}

@section HomeSlider{
    <div id="home-slide-section">
        <ul class="page-slider">
            <li><img src="content/images/slideshow_1.jpg" /></li>
            <li><img src="content/images/slideshow_2.jpg" /></li>
            <li><img src="content/images/slideshow_3.jpg" /></li>
            <li><img src="content/images/slideshow_4.jpg" /></li>
        </ul>
    </div>
}

@section PageTitle{
    <div class="title-section">
        <h3>
            Sản phẩm mới
            <span class="pull-right"><a href="#">Xem tất cả</a></span>
        </h3>
    </div>
}

@Html.Action("NewProducts","Product", new {maxRecords = 8})

@section AddScript{
    <!-- Bxslider -->
    <script src="@Url.Content("~/Scripts/jquery.bxslider/jquery.bxslider.min.js")"></script>

    <script>
        $(".page-slider").bxSlider({
            touchEnabled: false,
            mode: "fade",
            auto: true,
            speed: 600,
            tickerHover: true,
            pager: false,
            adaptiveHeight: true
        });
    </script>
}