<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>
    @RenderSection("SocialMediaTag", required: false)

    @RenderSection("AddStyles", required: false)

    @Styles.Render("~/Content/css")


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
@RenderSection("AfterBody", required: false)

<header>
    <div id="top-line"></div>
    <nav id="top-nav">
        <div id="logo-container">
            <a href="#">
                <img src="@Url.Content("~/Content/images/logo.png")"/>
            </a>
            <button class="navbar-toggle collapsed" data-target="#collapse-menu" data-toggle="collapse" type="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="collapse-menu">
            <div id="nav-right" class="navigation">
                <a href="@Url.Action("Index", "Search")" class="gray-border-right">
                    <span class="glyphicon glyphicon-search"></span>
                    TÌM KIẾM
                </a>
                <a href="@Url.Action("Login", "Account")" class="gray-border-right">
                    <span class="glyphicon glyphicon-user"></span>
                    Đăng nhập
                </a>
                <a href="@Url.Action("Index", "Cart")" class="gray-border-right">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    GIỎ HÀNG
                    <span id="item-amount">4</span>
                </a>
            </div>
            <div id="nav-left" class="navigation">
                <a href="/">TRANG CHỦ</a>
                <a href="@Url.Action("Index", "Product")">SẢN PHẨM</a>
                <a href="@Url.Action("Index", "Service")">DỊCH VỤ</a>
                <a href="@Url.Action("Index", "About")">GIỚI THIỆU</a>
            </div>
        </div>
    </nav>
</header>

@RenderSection("HomeSlider", false)

<div id="content-container" class="@ViewBag.ContentContainerCssClass">

    @RenderSection("PageTitle", false)

    <div id="@ViewBag.ContentCssId" class="content @ViewBag.ContentCssClass">
        @RenderBody()

    </div>
</div>

<footer>
    <div class="footer-social navigation pull-right">
        <a href="#">
            <img src="@Url.Content("~/Content/images/facebook-footer.png")" alt="Alternate Text"/>
        </a>
        <a href="#">
            <img src="@Url.Content("~/Content/images/twitter-footer.png")" alt="Alternate Text"/>
        </a>
        <a href="#">
            <img src="@Url.Content("~/Content/images/pinterest-footer.png")" alt="Alternate Text"/>
        </a>
        <a href="#">
            <img src="@Url.Content("~/Content/images/instagram-footer.png")" alt="Alternate Text"/>
        </a>
    </div>
    <div class="navigation pull-left gray-border-right">
        <a href="#">Developed by Tuan Le</a>
    </div>
</footer>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

<!-- Include all compiled plugins (below), or include individual files as needed -->
@Scripts.Render("~/Scripts/common")

@RenderSection("AddScript", required: false)

</body>
</html>